- Problema pagamento:

  Algoritmo "pagamento"
  //Vazio

  Var

     nome : caractere
     valor, horas, pagamento : real

  Inicio

     escreva("Nome: ")
     leia(nome)
     escreva("Valor por hora: ")
     leia(valor)
     escreva("Horas trabalhadas: ")
     leia(horas)

     pagamento <- valor * horas

     escreva("O pagamento para ", nome, " deve ser", pagamento)

  Fimalgoritmo
  //Vazio
  
=========================================================================
- Problema consumo:

  Algoritmo "consumo"
  //Vazio

  Var

     distancia, combustivel, consumo : real

  Inicio

    escreva("Distância percorrida: ")
    leia(distancia)
    escreva("Combutível gasto: ")
    leia(combustivel)

    consumo <- distancia / combustivel

    escreva("Consumo médio: ", consumo:4:2)

  Fimalgoritmo
  //Vazio

=========================================================================
- Problema medidas:

  Algoritmo "medidas"
  //Vazio

  Var

     a, b, c, areac, areat, areaz : real

  Inicio

     escreva("Digite a medida A: ")
     leia(a)
     escreva("Digite a medida B: ")
     leia(b)
     escreva("Digite a medida C: ")
     leia(c)

     areac <- a * a

     areat <- (a * b) / 2

     areaz <- ((a + b) * c) / 2

     escreval("AREA DO QUADRADO = ", areac:4:2)
     escreval("AREA DO TRIÂNGULO = ", areat:4:2)
     escreval("AREA DO TRAPÉZIO = ", areaz:4:2)

  Fimalgoritmo
  //Vazio

=========================================================================
- Problema duração:

  Algoritmo "duração"
  //Vazio

  Var

     duracao, horas, minutos, segundos, resto : inteiro

  Inicio

     escreva("Digite a duracao em segundos: ")
     leia(duracao)

     horas <- duracao \ 3600
     resto <- duracao % 3600

     minutos <- resto \ 60
     segundos <- resto % 60

     escreval(horas, ":", minutos, ":", segundos:4:2)

  Fimalgoritmo
  //Vazio
